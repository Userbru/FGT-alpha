<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent" android:layout_height="match_parent"
  android:padding="20dp" android:orientation="vertical">
  <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:text="FGT Macro Keyboard" android:textSize="20sp" android:paddingBottom="12dp"/>
  <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:text="1) Ative o teclado. 2) Ative Acessibilidade (filtrar teclas)." android:paddingBottom="16dp"/>
  <Button android:id="@+id/btn_record" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Gravar macro"/>
  <Button android:id="@+id/btn_save" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Salvar" android:layout_marginTop="8dp"/>
  <TextView android:id="@+id/tv_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Eventos: 0" android:layout_marginTop="12dp"/>
</LinearLayout>
